import java.awt.*;  

public class Background
{
    private Bubble b;
    public Background (Graphics g)
    {
        g.setColor(new Color(0, Utility.Random(220,150), 255));
        g.fillRect(0,0,1920,1080);
        for (int i = 0; i < 10000; i++)
        {
            b = new Bubble();
            b.drawBubble(g);
        }    
    }
}
